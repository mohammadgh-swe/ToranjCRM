@model ShopManagement.Application.Contracts.Order.CreateOrder
@{
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">ایجاد محصول جدید</h4>
</div>

<form asp-page="./Index" asp-page-handler="Create"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Name" class="control-label">نام</label>
                    <input type="text" class="form-control" asp-for="Name" onchange="makeSlug('Name', 'Slug')">
                    <span asp-validation-for="Name" class="error"></span>
                </div>
            </div>
            <div class="col-md-6" >
                <div class="form-group">
                    <input type="hidden" class="form-control" asp-for="Slug">
                    <span asp-validation-for="Slug" class="error"></span>

                    <label asp-for="Code" class="control-label">کد محصول</label>
                    <input type="text" class="form-control" asp-for="Code" >
                    <span asp-validation-for="Code" class="error"></span>
                </div>
            </div>
        </div>
       @*  <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Picture" class="control-label">عکس</label>
                    <input type="file" class="form-control" asp-for="Picture" accept="image/*">
                    <span asp-validation-for="Picture" class="error"></span>
                </div>
            </div>
        </div> *@

       <div class="row">
           <div class="col-md-6">
               <div class="form-group">
                   <label asp-for="CompanyId" class="control-label">مدرسه</label>
                   <select class="form-control" asp-for="CompanyId" asp-items='new SelectList(Model.Companies, "Id", "Name")'>
                       <option value="0">مدرسه ...</option>
                   </select>
                   <span asp-validation-for="CompanyId" class="error"></span>
               </div>
           </div>
           <div class="col-md-6">
               <div class="form-group">
                   <label asp-for="CategoryId" class="control-label">گروه محصول</label>
                   <select class="form-control" asp-for="CategoryId" asp-items='new SelectList(Model.Categories, "Id", "Name")'>
                       <option value="0">گروه محصول ...</option>
                   </select>
                   <span asp-validation-for="CategoryId" class="error"></span>
               </div>
           </div>
       </div>
       <div class="row">
           <div class="col-md-8">
               <div class="form-group">
                   <label asp-for="UnitPrice" class="control-label">قیمت محصول</label>
                   <input type="text" class="form-control" asp-for="UnitPrice" >
                   <span asp-validation-for="UnitPrice" class="error"></span>
               </div>
           </div>
           <div class="col-md-4">
               <div class="form-group">
                   <label asp-for="Size" class="control-label">سایز</label>
                   <input type="text" class="form-control" asp-for="Size" >
                   <span asp-validation-for="Size" class="error"></span>
               </div>
           </div>
       </div>

       <div class="row">
            <div class="col-md-12">
                <div class="form-group no-margin">
                    <label asp-for="Description" class="control-label">توضیحات</label>
                    <textarea class="form-control autogrow" asp-for="Description"
                              style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                    <span asp-validation-for="Description" class="error"></span>
                </div>
            </div>
        </div>

    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">ایجاد</button>
    </div>
</form>